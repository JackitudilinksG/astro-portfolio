---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Card from '../components/Card.astro';
import Socials from '../components/Socials.astro';

import { Icon } from "astro-icon";
---

<Layout title="Portfolio">

	<Header title="Portfolio"/>

	<section>

		<div id="projects">
			<h1>Projects</h1>
		</div>
		
		
		<main>
			<ul role="list" class="link-card-grid">
				<Card
					href="./urban-transit"
					title="HACKATHON - 26/01/2023"
					time="Urban Transit Solutions"
					image="https://images.pexels.com/photos/13379798/pexels-photo-13379798.jpeg"
				/>
	
				<Card
					href="./astro-portfolio"
					title="Astro Portfolio - 22/04/2023"
					time="Portfolio"
					image="https://images.pexels.com/photos/16237228/pexels-photo-16237228.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
				/>
	
				<Card
					href="./urban-transit"
					title="HACKATHON - 26/04/2023"
					time="EcoVision"
					image="https://images.pexels.com/photos/10897714/pexels-photo-10897714.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
				/>
	
				<Card
					title="DON'T CLICK ON THIS"
					time="Work In Progress"
					image="https://images.pexels.com/photos/12014350/pexels-photo-12014350.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load"
				/>
			</ul>
		</main>

		<Icon name="blob-scene-haikei" class="spacer1"/>
	</section>

	<section id="skills">

	</section>

	<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

	<Socials/>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}

	.spacer1 {
		aspect-ratio: 960/600;
		width: 100%;
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
		z-index: -10;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	#socials {
		margin: auto;
		text-align: center;
		font-family: "Montserrat", sans-serif;
		font-size: 30px;
	}

	#projects {
		margin: auto;
		text-align: center;
		font-family: "Montserrat", sans-serif;
		font-size: 40px;
		margin-bottom: 100px;
		letter-spacing: 1cm;
	}

	#myBtn {
		display: none;
		position: fixed;
		bottom: 20px;
		right: 30px;
		z-index: 99;
		font-size: 18px;
		border: none;
		outline: none;
		background-color: #f341a9;
		color: white;
		cursor: pointer;
		padding: 15px;
		border-radius: 4px;
	}

	#myBtn:hover {
		background-color:#701D4E;
	}
</style>

<script>
	let mybutton = document.getElementById("myBtn");

	// When the user scrolls down 20px from the top of the document, show the button
	window.onscroll = function() {scrollFunction()};

	function scrollFunction() {
	if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
		mybutton.style.display = "block";
	} else {
		mybutton.style.display = "none";
	}
	}

	// When the user clicks on the button, scroll to the top of the document
	function topFunction() {
		document.body.scrollTop = 0;
		document.documentElement.scrollTop = 0;
	}
</script>