---
export interface Props {
	title: string;
}

const {title="default title"} = Astro.props;

import { Icon } from "astro-icon";
---

<header>
    <p id="title">{title}</p>

    <nav>
        <ul class="nav_links">
            <li><a href="#projects">Projects</a></li>
            <li><a href="#about-me">About me</a></li>
            <li><a href="#socials">Socials</a></li>
        </ul>
    </nav>
</header>
<Icon name="layered-waves-haikei" class="h-5 w-5" />

<style>
    li, a {
        font-family: "Montserrat", sans-serif;
        font-size: 20px;
        color: #edf0f1;
        text-decoration: none;
        background-color: #701D4E;
    }

    header {
        padding: 30px 10%;
        text-align: center;
        font-size: 35px;
        display: flex;
        justify-content: flex-end;
        background-color: #701D4E;
    }

    #title {
        cursor: pointer;
        margin-right: auto;
        color: white;
        font-family: 'Montserrat', sans-serif;
        background-color: #701D4E;
    }

    .nav_links {
        list-style: none;
        background-color: #701D4E;
    }

    .nav_links li {
        display: inline-block;
        padding: 0px 20px;
        background-color: #701D4E;
    }

    .nav_links li a {
        transition: all 0.3s ease 0s;
        background-color: #701D4E;
    }

    .nav_links li a:hover {
        color: #f341a9;
    }

    .spacer1 {
        aspect-ratio: 960/300;
        width: 100%;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
    }
    
    .layer1 {
        background-image: url('src\components\layered-waves-haikei.svg');
    }
</style>